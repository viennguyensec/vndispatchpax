<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="NoActionBar" parent = "Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name = "InputDefault">
        <item name="android:layout_width">@dimen/mainWidth</item>
        <item name="android:layout_height">@dimen/inputHeight</item>
        <item name="android:background">@drawable/input_radius</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
        <item name="android:paddingStart">@dimen/inputPaddingStart</item>
        <item name="android:layout_marginTop">13.5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SplashTheme" parent="NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>

    <style name="TextView" parent="NoActionBar">
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">@dimen/mainWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="MainButton" parent="NoActionBar">
        <item name="android:layout_width">@dimen/mainWidth</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_marginTop">13.5dp</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/btn_radius</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    
    <style name="ForgotPasswordDialog">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullHeightDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
