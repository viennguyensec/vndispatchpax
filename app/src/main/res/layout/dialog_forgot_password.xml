<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ic_success"
        android:gravity="center"
        android:background="@mipmap/ic_success"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true"/>


    <TextView
        android:layout_width="@dimen/mainWidth"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We send you an email with the instruction how to reset your password"
        android:textSize="@dimen/mainTextSize"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_dialog"
        android:layout_below="@+id/ic_success"
        android:gravity="center_horizontal" />


    <Button
        android:layout_width="@dimen/mainWidth"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="@color/colorTransparent"
        android:textStyle="bold"
        android:id="@+id/btnOK"
        android:layout_below="@+id/text_dialog"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>